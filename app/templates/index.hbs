<div class="main-content">
    <div id="lp-slide-1" class="slide on-top">
        <section id="lp-slide-section-1">
            <div class="lp-video-wrapper">
                <video loop autoplay poster="/images/LP-BG.jpg">                    
                    <source src="/video/Stock_Footage_CDS.mp4" type='video/mp4'/>
                    <source src="/video/Stock_Footage_CDS.webm" type='video/webm' />
                    <source src="/video/Stock_Footage_CDS.ogg" type='video/ogg' />
                    <img src="/images/LP-BG.jpg" title="Your browser does not support the <video> tag">                
                </video>            
                <div id="lp-video-overlay">
                    <div class="row lp-video-overlay-wrapper">
                        <h1 class="col-xs-12">KIT BUILDER</h1>
                        <h3 class="col-xs-12">The Best Way to Discover Drum Samples</h3>
                        <p class="col-xs-10 col-xs-offset-1">
                            Beat Paradigm offers Music Producers the first way to build custom drum kits with Kit Builder.
                            Find any sound you need and build the sample kit you want.
                        </p>
                        <div class="col-xs-6 col-xs-offset-3">
                            {{#link-to 'sign-up' class="cds-button cds-button-orange cds-button-aw-large"}}Get Started{{/link-to}}
                        </div>                
                    </div>                
                </div>
            </div>
            <div class="container lp-container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="row lp-title-tagline-logo">
                            <div class="col-xs-12 lp-title-tagline">
                                <h3>Build Your Own Custom Drum Kits</h3>
                            </div>
                        </div>
                        <div class="row lp-sales-pitch">
                            <p>
                               Browse drum kits, play all sounds on the spot, &amp; choose only what you need.
                            </p>
                        </div>
                        <div class="row lp-three-choices">
                            <div class="col-xs-3 lp-choice">
                                <div id="lp-choice-genre-1" class="lp-choice-genre cds-background-image"></div>
                                <div class="squaredThree">
                                    <input type="checkbox" id="squaredThree-{bindvalue-1}" name="check" value="{bindvalue-1}"/>
                                    <label for="squaredThree-{bindvalue-1}"></label>
                                </div>                                
                            </div>
                            <div class="col-xs-3 lp-choice">
                                <div id="lp-choice-genre-2" class="lp-choice-genre cds-background-image"></div>
                                <div class="squaredThree">
                                    <input type="checkbox" id="squaredThree-{bindvalue-2}" name="check" value="{bindvalue-2}"/>
                                    <label for="squaredThree-{bindvalue-2}"></label>
                                </div>                                
                            </div>
                            <div class="col-xs-3 lp-choice">
                                <div id="lp-choice-genre-3" class="lp-choice-genre cds-background-image"></div>
                                <div class="squaredThree">
                                    <input type="checkbox" id="squaredThree-{bindvalue-3}" name="check" value="{bindvalue-3}"/>
                                    <label for="squaredThree-{bindvalue-3}"></label>
                                </div>                                
                            </div>
                            <div class="col-xs-1 lp-choice">
                                <div id="lp-choice-equal" class=""></div>                                
                            </div>
                            <div class="col-xs-2 lp-choice">
                                <div id="lp-choice-result" class="lp-choice-genre cds-background-image"></div>                                
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-8 col-xs-offset-2">
                                {{#link-to 'kb-learn-more' class="cds-button cds-button-orange cds-button-aw-large"}}Learn More{{/link-to}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

