<div id="kb-slide-1" class="slide">
    <div class="slide-width-container">
        <div class="row">
            <section id="kb-slide-1-section-1" class="col-xs-6">
                <div id="KitFilter" class="kb-slide-section-container">
                    <div class="row filter-row filter-row-pocket-effect">
                        <div class="col-xs-3 filters reset-filters">
                            <ul class="row top-menu">
                                <li id="Reset" class="col-xs-12 menu-item" {{action 'resetMixitup'}}>Reload
                                </li>                      
                            </ul>
                        </div>
                        <div class="col-xs-9 filters">
                            <ul class="row top-menu">
                                <li class="col-xs-3 menu-item menu-word">Filters:</li>
                                <li {{bind-attr class=":sort :col-xs-2 :menu-item newKitsHidden::active"}} {{action 'showNewKits'}} data-sort="datecreated:asc">Newer</li>
                                <li {{bind-attr class=":sort :col-xs-2 :menu-item newKitsHidden::active"}} data-sort="datecreated:desc">Older</li>
                                <li class="col-xs-2 menu-item">A-Z</li>
                                <li {{bind-attr class=":col-xs-2 :menu-item :icon-tags tagsHidden::active"}} {{action 'showTags'}}></li>
                            </ul>
                        </div>
                    </div>
                    <div class="row kit-row">
                        <div {{bind-attr class=":tag-selection tagsHidden:ng-hide"}}>
                            <ul class="row tag-list">
                                <!-- Loop the li for Tags-->

                                <!--
                                <li class="col-xs-3">
                                    <div class="row">
                                        <button id="Reset" class="col-xs-12 tag-name">All</button>
                                    </div>
                                </li>
                                -->
                                {{#each tag in tags}}
                                <fieldset class="col-xs-4">
                                    <li>
                                        <div class="row">
                                            <div class="col-xs-8 tag-name">{{tag}}</div>
                                            <div class="col-xs-4 select-sound">
                                                <!-- .squaredThree -->
                                                <div class="squaredThree">
                                                    <input type="checkbox" id="squaredThree-{{unbound tag}}" name="check" value=".{{unbound tag}}"/>
                                                    <label for="squaredThree-{{unbound tag}}"></label>
                                                </div>
                                                <!-- end .squaredThree -->
                                            </div>
                                        </div>
                                    </li>
                                </fieldset>
                                {{/each}}
                            </ul>
                        </div>
                        <div id="kitmix" {{action 'closeTags'}}>
                            {{kit-mix kits=controllers.kitbuilder.model currentKit=currentKit}}
                            <div class="fail-message">
                                <span>No items were found matching the selected filters. <br> Reload and Try again!</span>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section id="kb-slide-1-section-2" class="col-xs-6">
                <div class="kb-slide-section-container">

                    <div class="row filter-row filter-row-pocket-effect">
                        <form class="col-xs-4">
                            {{select-box selectedSampleType=selectedSampleType currentKit=currentKit}}
                        </form>

                        <div class="col-xs-4 sample-filters">
                            <ul class="row top-menu">
                                <li class="col-xs-12 menu-item" {{action 'showDescription'}} {{bind-attr class=":col-xs-12 :menu-item descriptionHidden::active"}}>Kit Description</li>
                            </ul>
                        </div>
                    </div>
                    <div class="row selection-row">
                        <div {{bind-attr class=":kit-description descriptionHidden:ng-hide"}}>
                            <h4>{{currentKit.description.selling_point1_title}}</h4>
                            <p>
                                 {{currentKit.description.selling_point1}}
                            </p>
                            <h4>{{currentKit.description.selling_point2_title}}</h4>
                            <p>
                                 {{currentKit.description.selling_point2}}
                            </p>
                            <h4>{{currentKit.description.selling_point3_title}}</h4>
                            <p>
                                 {{currentKit.description.selling_point3}}
                            </p>
                            <p>
                                 {{currentKit.description.author}}
                            </p>
                            <p>
                                 {{currentKit.description.date_created}}
                            </p>
                        </div>
                        <div class="col-xs-6 selected-kit-media" {{action 'closeDescription'}}>
                            <div class="row">
                                <div class="col-xs-12 sound-kit-selection">
                                    <h4> {{currentKit.name}} </h4>
                                    <img {{bind-attr src=currentKitImage}} {{bind-attr alt=currentKit.name}}>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 sound-kit-soundcloud">
                                    <iframe width="100%" height="100" scrolling="no" frameborder="no" {{bind-attr src=currentKit.soundcloud}}></iframe>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6 selected-kit-sounds">
                            <div class="row">
                                <div class="col-xs-12 sound-kit-selection">
                                    <h4>{{selectedSampleType}}</h4>
                                    <ul class="sample-list">
                                        {{#each sample in filteredSamples}}
                                            {{sample-toggler sampleType=false choosing=true sample=sample chosenSamples=controllers.kitbuilder.samplesChosen}}
                                        {{/each}}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
