<div class="container modal-container" style=""> <!-- this is the entire modal form, including the background -->
    <div class="row modal-container-inner"> <!-- this is the container wrapper -->
        <div id="" class="col-xs-12 modal-form-area"> <!-- log in form -->
            <p class="login-heading">Sign In</p>
            <form class="cd-form cds-form" {{action 'login' on='submit'}}>
                <p class="fieldset">
                    <label class="image-replace cd-email" for="signin-email">User Name</label>
                    {{input id="signin-email" value=identification placeholder='E-mail' type='email' class="cds-text-input full-width"}}
                    <span class="cd-error-message">Client Side validation error</span>
                </p>

                <p class="fieldset">
                    <label class="image-replace cd-password" for="signin-password">Password</label>
                    {{input id="signin-password" value=password placeholder='Password' type='password' class="cds-text-input full-width"}}
                    {{#if passwordHidden}}
                        <a href="#0" class="hide-password" {{action 'showPassword'}}>Show</a>
                    {{else}}
                        <a href="#0" class="hide-password" {{action 'hidePassword'}}>Hide</a>
                    {{/if}}                    
                    <span class="cd-error-message">Client Side validation error</span>
                </p>
                {{#if showError}}
                    <span class="cds-error-message modal-error">Error: {{errorMessage}}!</span>
                {{/if}}
                <p class="fieldset">
                    <input class="cds-button cds-button-aw-medium" type="submit" value="Sign In">
                </p>
            </form>

            
            <!-- <a href="#0" class="cd-close-form">Close</a> -->
        </div> <!-- cd-login -->

        <div id="cd-reset-password" {{bind-attr class="resetFormHidden:ng-hide"}}> <!-- reset password form -->
            {{!-- <p class="login-heading">Reset Password</p> --}}
            <p class="cd-form-message">Lost your password? No worries! <br> Fill out the form below with a new password. Afterwards, you will receive a verification email to complete the reset process.</p>

            <form class="cd-form cds-form" style="margin-top: -20px;" {{action 'resetPassword' on='submit'}}>
                {{#if resetPasswordEmailError}}
                    <span class="cds-error-message modal-error">{{resetPasswordEmailError}}</span>                
                {{/if}}
                <p class="fieldset">                    
                    {{input id="reset-password-email" value=email placeholder='E-mail' type='email' class="cds-text-input full-width"}}
                </p>
                {{#if resetPasswordNewPasswordError}}
                    <span class="cds-error-message modal-error">{{resetPasswordNewPasswordError}}</span>                
                {{/if}}
                <p class="fieldset">                    
                    {{input id="reset-password-new-password" value=newPassword placeholder='New password' type='password' class="cds-text-input full-width"}}
                    {{#if resetPasswordHidden}}
                        <a href="#0" class="hide-password" {{action 'showResetPassword'}}>Show</a>
                    {{else}}
                        <a href="#0" class="hide-password" {{action 'hideResetPassword'}}>Hide</a>
                    {{/if}}  
                </p>
                {{#if resetPasswordUserError}}
                    <span class="cds-error-message modal-error">{{resetPasswordUserError}}</span>
                {{else if resetPasswordSuccessMessage}}
                    <span class="cds-error-message modal-error">{{resetPasswordSuccessMessage}}</span>
                {{/if}}
                <p class="fieldset">
                    <input class="cds-button cds-button-aw-medium" type="submit" value="Reset Password">
                </p>
            </form>            
        </div> <!-- cd-reset-password -->
        
    </div> <!-- cd-user-modal-container -->
    {{#if resetFormHidden}}
        <p class="cd-form-bottom-message"><a href="#0" {{action 'showResetForm'}}>Forgot your password?</a></p>
    {{else}}
        <p class="cd-form-bottom-message"><a href="#0" {{action 'hideResetForm'}}>Go back to Sign In Form</a></p>
    {{/if}}
</div> <!-- cd-user-modal -->
