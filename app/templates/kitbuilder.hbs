<div class="main-content kb-main-content">
	<div id="kb-slide-1" class="slide">
    	{{liquid-outlet}}
    	<div class="kb-save-container">
    		<div class="kb-save icon-download" {{action "openSaveDialog"}}></div>
    		{{#if startSave}}
                <div class="cds-form kb-template-save-form">
	                    {{input type="text" placeholder="Name Your Kit" class="col-xs-12 cds-text-input name-your-kit" value=kitName}}
	                    {{#if nameChange}}
	                    	<button class="col-xs-6" {{action "saveTemplateAs"}}>Save Template As</button>
                    	{{else}}
                			<button class="col-xs-6" {{action "saveTemplate"}}>SaveTemplate</button>
                    	{{/if}}
	                    <button class="col-xs-6" {{action "closeSaveDialog"}}>Done</button>
                </div>
    		{{/if}}
    	</div>
	</div>
</div>