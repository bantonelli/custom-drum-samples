<!--
- We are in the kitbuilder app.
- Also within the SlideController aliased as "slideshow
-->
<div id="kb-slide-2" class="slide">
    <div class="slide-width-container">
        <div class="col-xs-9">
            <div class="row kit-choices">
                <div class="col-xs-12 kit-details">
                    <div class="col-xs-4 cds-form">
                        {{input type="text" placeholder="Name Your Kit" class="cds-text-input name-your-kit" value=customKitName}}
                    </div>

                    <div class="col-xs-8">
                        <h3><span style="display:inline-block;"class="sample-name-total"> {{customKitName}} </span></h3>
                    </div>
                </div>
                    {{#each type in uniqueSampleTypes}}
                    <section class="col-xs-4 kb-slide-2-section sample-choices section-pocket-effect">
                        <h4 class="col-xs-10 col-xs-offset-1">{{type}}</h4>
                        <div class="row instrument-choice">
                            <!--<span class="col-xs-10 col-xs-offset-1">808's</span>-->
                            <ul class="sample-list col-xs-10 col-xs-offset-1">
                                {{#each sample in controllers.kitbuilder.samplesChosen}}
                                    {{sample-toggler sampleType=type choosing=false sample=sample chosenSamples=controllers.kitbuilder.samplesChosen}}
                                {{/each}}
                            </ul>
                        </div>
                    </section>
                    {{/each}}
            </div>
        </div>
        <div class="col-xs-3">
            <div class="row discounts">
                <div class="total-sounds">
                    <h3>Total Sounds: <span class="sample-name-total">{{controllers.kitbuilder.samplesChosen.length}}</span></h3>
                </div>
                <section class="kb-slide-2-section discount-section">
                    <h3>Discounts</h3>
                </section>
            </div>

        </div>
    </div>
</div>
