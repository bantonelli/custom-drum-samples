<div class="main-content">
    <div class="slide register-slide" style="">
        <div class="container register-container">
    		<h3>Sign Up</h3>
    		<form class="cds-form" action="" method="POST" id="payment-form"> 
                <div class="register-info">
                        <div class="cds-fieldset">
                            {{input id="first-name-billing" placeholder="Username" class="cds-text-input" type="text" value=username}}
                            {{#if errors.username}}
                                {{#if username}}
                                    <span class="cds-error-message-flag">{{errors.username}}</span>
                                {{else if submissionErrors}}
                                    <span class="cds-error-message-flag">{{submissionErrors.username}}</span>
                                {{/if}}
                            {{/if}}
                        </div>                                              
                        {{input id="last-name-billing" placeholder="Email" class="cds-text-input" type="text" value=email}}
                        {{#if errors.email}}
                            {{#if email}}
                                <span class="cds-inline-error-message">{{errors.email}}</span>
                            {{else if submissionErrors}}
                                <span class="cds-inline-error-message">{{submissionErrors.email}}</span>
                            {{/if}}
                        {{/if}}                                                
                        {{input id="address-1-billing" placeholder="Password" class="cds-text-input" type="password" value=password}}
                        {{#if errors.password}}
                            {{#if password}}
                                <span class="cds-inline-error-message">{{errors.password}}</span>
                            {{else if submissionErrors}}
                                <span class="cds-inline-error-message">{{submissionErrors.password}}</span>
                            {{/if}}
                        {{/if}}                          
                        {{input id="address-2-billing" placeholder="Confirm Password" class="cds-text-input" type="password" value=passwordConfirmation}}
                        {{#if errors.passwordConfirmation}}
                            {{#if passwordConfirmation}}
                                <span class="cds-inline-error-message">{{errors.passwordConfirmation}}</span>
                            {{else if submissionErrors}}
                                <span class="cds-inline-error-message">{{submissionErrors.passwordConfirmation}}</span>
                            {{/if}}
                        {{/if}}                                                                        
                </div>                               
                <button class="cds-button cds-button-orange cds-button-aw-medium register-button" type="submit" {{action 'register'}}>Submit</button>
            </form>
        </div>
    </div>
</div>