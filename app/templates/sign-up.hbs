<div class="main-content">
    <div class="slide register-slide" style="">
        <div class="container register-container">
    		<h3>Sign Up</h3>
    		<form class="cds-form" action="" method="POST" id="payment-form"> 
                <div class="register-info">
                    <div class="cds-fieldset">
                        {{input id="" placeholder="Username" class="cds-text-input" type="text" value=username}}
                        {{#if errors.username}}
                            {{#if username}}
                                <span class="cds-error-message-flag">{{errors.username}}</span>
                            {{else if submissionErrors}}
                                <span class="cds-error-message-flag">{{submissionErrors.username}}</span>
                            {{/if}}
                        {{/if}}
                    </div>
                    <div class="cds-fieldset">                                              
                        {{input id="" placeholder="Email" class="cds-text-input" type="email" value=email}}
                        {{#if errors.email}}
                            {{#if email}}
                                <span class="cds-error-message-flag">{{errors.email}}</span>
                            {{else if submissionErrors}}
                                <span class="cds-error-message-flag">{{submissionErrors.email}}</span>
                            {{/if}}
                        {{/if}}
                    </div>
                    <div class="cds-fieldset">                                                
                        {{input id="" placeholder="Password" class="cds-text-input" type="password" value=password}}
                        {{#if errors.password}}
                            {{#if password}}
                                <span class="cds-error-message-flag">{{errors.password}}</span>
                            {{else if submissionErrors}}
                                <span class="cds-error-message-flag">{{submissionErrors.password}}</span>
                            {{/if}}
                        {{/if}}   
                    </div>
                    <div class="cds-fieldset">                       
                        {{input id="" placeholder="Confirm Password" class="cds-text-input" type="password" value=passwordConfirmation}}                        
                        {{#if errors.passwordConfirmation}}
                            {{#if passwordConfirmation}}
                                <span class="cds-error-message-flag">{{errors.passwordConfirmation}}</span>
                            {{else if submissionErrors}}
                                <span class="cds-error-message-flag">{{submissionErrors.passwordConfirmation}}</span>
                            {{/if}}
                        {{/if}}                                                
                    </div>                                                                        
                </div>                               
                <button class="cds-button cds-button-orange cds-button-aw-medium register-button" type="submit" {{action 'register'}}>Submit</button>
            </form>
        </div>
    </div>
</div>