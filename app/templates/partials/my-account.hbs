<div class="row">
    <section class="col-xs-5 col-xs-offset-1 form-section">
        <div class="row">
            <h4 class="col-xs-12 icon-address-book">Username & Email</h4>
            <form class="col-xs-12 cds-form">
                {{input class="cds-text-input" type="text" placeholder=session.currentUser.username value=userName size="40"}}
                {{input class="cds-text-input" type="text" placeholder=session.currentUser.email value=email size="40"}}
            </form>
            <div class="col-xs-9">
                <p class="cds-button cds-button-aw-medium" {{action 'updateAccount'}}>Update Account</p>
            </div>
        </div>
    </section>
    <section class="col-xs-5 form-section">
        <div class="row">
            <h4 class="col-xs-12 icon-unlocked">Password Reset</h4>
            <form class="col-xs-12 cds-form">
                {{input class="cds-text-input" type="password" placeholder="Current Password" value=currentPassword size="40"}}
                {{input class="cds-text-input" type="password" placeholder="New Password" value=newPassword size="40"}}
            </form>
            <div class="col-xs-9">
                <p class="cds-button cds-button-aw-medium" {{action 'resetPassword'}}>Reset Password</p>
            </div>
        </div>
    </section>
</div>